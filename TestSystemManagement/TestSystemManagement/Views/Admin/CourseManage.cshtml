@{
    ViewBag.Title = "CourseService";
}

<main ng-controller="NewSubjectController">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Quản Lý Môn Thi</h3>
        </div>
        <div class="panel-body">
            <div class="row contain-wrapper">
                <div class="col-lg-6">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Tìm môn thi">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Tìm môn thi</button>
                        </span>
                    </div><!-- /input-group -->
                </div><!-- /.col-lg-6 -->
                <br /><br />
                <form class="col-md-12" name="AddNewSubjectForm" novalidate ng-submit="AddNewSubject()">
                    <div class="row">
                        <div class="input-field col-md-6">
                            <label for="SubjectName">Tên Môn</label>
                            <label for="SubjectName" ng-show="(AddNewSubjectForm.SubjectName.$dirty || Submitted) && AddNewSubjectForm.SubjectName.$error.required">Tên Môn Không Được Để Trống</label>
                            <input id="SubjectName" class="form-control" name="SubjectName" ng-class="Submitted?'ng-dirty':''" ng-model="SubjectData.SubjectName" type="text" required autofocus>
                        </div>
                        <div class="input-field  col-md-6">
                            <label for="SubjectCode">Mã Môn</label>
                            <label for="SubjectCode" ng-show="(AddNewSubjectForm.SubjectCode.$dirty || Submitted) && AddNewSubjectForm.SubjectCode.$error.required">Mã Môn Không Được Để Trống</label>
                            <input id="SubjectCode" class="form-control" name="SubjectCode" ng-class="Submitted?'ng-dirty':''" ng-model="SubjectData.SubjectCode" type="text" required autofocus>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col-md-6">
                            <label for="SecretCode">Mã Bí Mật</label>
                            <label for="SecretCode" ng-show="(AddNewSubjectForm.SecretCode.$dirty || Submitted) && AddNewSubjectForm.SecretCode.$error.required">Mã Bí Mật Không Được Để Trống</label>
                            <input id="SecretCode" class="form-control" name="SecretCode" ng-class="Submitted?'ng-dirty':''" ng-model="SubjectData.SecretCode" type="text" required autofocus>
                        </div>
                        <div class="input-field  col-md-6">
                            <label for="NoOfEasyQuestion">Số Lượng Câu Hỏi Dễ</label>
                            <label for="NoOfEasyQuestion" ng-show="(AddNewSubjectForm.NoOfEasyQuestion.$dirty || Submitted) && AddNewSubjectForm.NoOfEasyQuestion.$error.required">Số Lượng Câu Hỏi Dễ Không Được Để Trống</label>
                            <input id="NoOfEasyQuestion" class="form-control" name="NoOfEasyQuestion" ng-class="Submitted?'ng-dirty':''" ng-model="SubjectData.NoOfEasyQuestion" type="number" required autofocus>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field  col-md-6">
                            <label for="NoOfMediumQuestion">Số Lượng Câu Hỏi Trung Bình</label>
                            <label for="NoOfMediumQuestion" ng-show="(AddNewSubjectForm.NoOfMediumQuestion.$dirty || Submitted) && AddNewSubjectForm.NoOfMediumQuestion.$error.required">Số Lượng Câu Hỏi Trung Bình Không Được Để Trống</label>
                            <input id="NoOfMediumQuestion" class="form-control" name="NoOfMediumQuestion" ng-class="Submitted?'ng-dirty':''" ng-model="SubjectData.NoOfMediumQuestion" type="number" required autofocus>
                        </div>
                        <div class="input-field  col-md-6">
                            <label for="NoOfHardQuestion">Số Lượng Câu Hỏi Khó</label>
                            <label for="NoOfMediumQuestion" ng-show="(AddNewSubjectForm.NoOfHardQuestion.$dirty || Submitted) && AddNewSubjectForm.NoOfHardQuestion.$error.required">Số Lượng Câu Hỏi Khó Không Được Để Trống</label>
                            <input id="NoOfHardQuestion" class="form-control" name="NoOfHardQuestion" ng-class="Submitted?'ng-dirty':''" ng-model="SubjectData.NoOfHardQuestion" type="number" required autofocus>
                        </div>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary" ng-hide="HideAddSubjectBtn">
                        Thêm Môn
                    </button>

                    <img src="/Content/img/hourglass.gif" ng-show="Loading" />
                </form>
            </div>
        </div>
    </div>
</main>
@section scripts{
    <script src="~/Scripts/app/Controller/SubjectController.js"></script>
}