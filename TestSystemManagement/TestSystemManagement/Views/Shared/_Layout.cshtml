<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bootstrap")
</head>
<body ng-app="TestSystemManagement">

    <div class="row">
        <div class="col-md-2">
            <div class="nav-side-menu" ng-controller="IndexController">
                <div class="brand">Brand Logo</div>
                <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>

                <div class="menu-list">

                    <ul id="menu-content" class="menu-content collapse out">
                        <li class="active">
                            <a href="#">
                                <i class="fa fa-dashboard fa-lg"></i> Dashboard
                            </a>
                        </li>
                        <li data-toggle="collapse" data-target="#products" class="collapsed ">
                            <a href="@Url.Action("CourseManage", "Admin")">
                                <i class="fa fa-pencil fa-lg"></i>
                                Quản Lý Môn Thi
                            </a>
                        </li>
                        <li data-toggle="collapse" data-target="#service" class="collapsed">
                            <a href="@Url.Action("ImportQuestion", "Admin")">
                                <i class="fa fa-pencil fa-lg"></i>
                                Import Đề Thi
                            </a>
                        </li>
                        <li data-toggle="collapse" data-target="#service" class="collapsed">
                            <a href="@Url.Action("CreateQuestion", "Admin")">
                                <i class="fa fa-pencil fa-lg"></i>
                                Quản Lý Đề Thi
                            </a>
                        </li>
                        <li data-toggle="collapse" data-target="#service" class="collapsed">
                            <a href="@Url.Action("DownloadQuestion", "Admin")">
                                <i class="fa fa-pencil fa-lg"></i>
                                In Đề Thi
                            </a>
                        </li>
                        <li>
                            <a href="/Account/Logout" ng-click="Logout()" target="_self"><i class="fa fa-power-off fa-lg"></i> Đăng Xuất</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-10" id="cotain-partial" style="padding:8%">@RenderBody()</div>
    </div>

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angular-app")
    @Scripts.Render("~/bundles/material")
    <script type="text/javascript" src="@Url.Content("~/Scripts/Lib-Js/ckfinder/ckfinder.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Lib-Js/ckeditor/ckeditor.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>