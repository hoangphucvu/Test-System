<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/web-css")
</head>
<body ng-app="TestSystemManagement">
    <header>
        <div class="side-navbar" ng-controller="IndexController">
            <div class="nav-side-menu">
                <div class="brand">
                    <img src="~/Content/img/avatar.png" />
                    <p>Welcome</p>
                </div>
                <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>
                <div class="menu-list">
                    <ul class="collapsible" data-collapsible="expandable">
                        <li>
                            <div class="collapsible-header management">
                                <i class="fa fa-dashboard fa-lg pad9"></i>Dashboard
                            </div>
                        </li>
                    </ul>
                    <ul class="collapsible" data-collapsible="expandable">
                        <li>
                            <div class="collapsible-header management">
                                <i class="fa fa-pencil pad9" aria-hidden="true"></i><a href="@Url.Action("CourseManage","Admin")">
                                    Quản Lý Môn Thi
                                </a>
                            </div>
                        </li>
                    </ul>
                    <ul class="collapsible" data-collapsible="expandable">
                        <li>
                            <div class="collapsible-header management">
                                <i class="fa fa-pencil pad9" aria-hidden="true"></i><a href="@Url.Action("QuestionManage","Admin")">
                                    Quản Lý Câu Hỏi
                                </a>
                            </div>
                        </li>
                    </ul>
                    <ul class="collapsible" data-collapsible="expandable">
                        <li>
                            <div class="collapsible-header management">
                                <i class="fa fa-power-off pad9" aria-hidden="true"></i><a href="/Account/Logout" ng-click="Logout()" target="_self">Đăng Xuất</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div>@RenderBody()</div>

    <script src="~/Scripts/Lib-Js/angular.min.js"></script>
    @Scripts.Render("~/bundles/angular-app")
    @Scripts.Render("~/bundles/material")
    <script type="text/javascript" src="@Url.Content("~/Scripts/Lib-Js/ckfinder/ckfinder.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Lib-Js/ckeditor/ckeditor.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>